<?xml version="1.0" encoding="UTF8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.small.fruitandvagetablemallspringboot.dao.CommodityClassifyMapper">
    <select id="queryForComClassfyById" parameterType="int"  resultType="commodityClassify">
        select * from commodity_classify where id=#{id}
    </select>

    <select id="queryForComClassfy"  resultType="commodityClassify">
        select * from commodity_classify
    </select>

    <insert id="insertClassify" parameterType="commodityClassify">
        insert into commodity_classify(commoditTypeName) VALUES(#{commoditTypeName});
    </insert>

    <update id="updateClassById" parameterType="commodityClassify">
        update commodity_classify
        <set>
            <if test="''!=commoditTypeName and null!=commoditTypeName">
                commoditTypeName=#{commoditTypeName}
            </if>
        </set>
        where id=#{id}
    </update>

    <delete id="deleteClassById" parameterType="int">
        delete from commodity_classify where id =#{id}
    </delete>

    <delete id="deleteClassByBatchId" parameterType="int[]">
        delete from commodity_classify where id in
                <foreach collection="classIds" separator="," open="(" close=")" item="id">
                    #id;
                </foreach>
    </delete>
</mapper>